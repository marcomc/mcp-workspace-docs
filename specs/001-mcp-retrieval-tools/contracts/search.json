{
  "tool": "search",
  "input_schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["repo", "query"],
    "properties": {
      "repo": {
        "type": "string",
        "enum": ["docs", "code", "both"]
      },
      "query": {
        "type": "string",
        "minLength": 1
      },
      "file_glob": {
        "type": "string"
      },
      "limit": {
        "type": "integer",
        "minimum": 1
      }
    }
  },
  "output_schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["result", "meta"],
    "properties": {
      "result": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["path", "line", "preview"],
          "properties": {
            "path": { "type": "string" },
            "line": { "type": "integer", "minimum": 1 },
            "preview": { "type": "string" }
          }
        }
      },
      "meta": {
        "type": "object",
        "additionalProperties": false,
        "required": ["repo", "duration_ms", "truncated"],
        "properties": {
          "repo": { "type": "string", "enum": ["docs", "code", "both"] },
          "duration_ms": { "type": "integer", "minimum": 0 },
          "truncated": { "type": "boolean" }
        }
      }
    }
  },
  "error_schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["error"],
    "properties": {
      "error": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "message", "details"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "details": { "type": "object" }
        }
      }
    }
  },
  "error_codes": [
    { "code": "CONFIG_INVALID", "message": "Invalid repository configuration" },
    { "code": "QUERY_EMPTY", "message": "Query must be non-empty" },
    { "code": "LIMIT_INVALID", "message": "Limit must be >= 1" },
    { "code": "REPO_INVALID", "message": "Repo must be docs, code, or both" }
  ]
}
